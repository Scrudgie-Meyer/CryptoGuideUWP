        <TextBox x:Name="Input1" HorizontalAlignment="Left" Margin="388,360,0,0" TextWrapping="Wrap" Text="&#xD;&#xA;" VerticalAlignment="Top" Height="38" Width="158" TextChanged="Input1_TextChanged"/>
        <TextBlock x:Name="Input2" HorizontalAlignment="Left" Margin="719,360,0,0" TextWrapping="Wrap" Text="&#xD;&#xA;" VerticalAlignment="Top" Height="39" Width="158"/>

    </Grid>
